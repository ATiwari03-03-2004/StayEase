<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-sm-8 offset-sm-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card listing-card col-sm-6 offset-sm-3">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night<br />
        <%= listing.location %><br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <br />
  <div class="btns mb-3">
    <a href="/listings/<%=listing._id %>/edit" class="btn edit-btn offset-sm-3"
      >Edit</a
    >
    <form
      action="/listings/<%=listing._id %>/delete?_method=DELETE"
      method="post"
    >
      <button type="submit" class="btn btn-dark">Delete</button>
    </form>
  </div>
  <div class="col-sm-8 offset-sm-3 mb-3">
    <hr />
    <p><b>Leave a Review</b></p>
    <form
      class="needs-validation"
      action="/listings/<%= listing._id %>/review"
      method="post"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          name="review[rating]"
          class="form-range"
          id="rating"
          value="5"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          rows="4"
          cols="10"
          class="form-control"
          id="comment"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a comment for Review.</div>
      </div>
      <div class="mb-3 mt-3">
        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </div>
    </form>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (review of listing.reviews) { %>
      <div class="card col-sm-5 ms-3 mb-3">
        <div class="card-body">
          <h6 div class="card-title mt-2">Username</h6>
          <p class="card-text"><%= review.rating %> star</p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <form action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" class="mb-2 mt-2" method="post">
          <button type="submit" class="btn btn-dark btn-sm">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
