<style>
  .btn-search {
    background-color: #fe434d;
    color: white;
    border-radius: 100%;
    height: 2.5rem;
    width: 2.5rem;
    margin: 0;
  }

  .btn-search:hover {
    opacity: 0.85;
    background-color: #fe434d;
    color: white;
  }

  input.input-search {
    border-radius: 1.2rem;
    padding: 0.25rem 0.25rem 0.25rem 1rem;
    font-size: 0.9rem;
  }

  form.input-form {
    padding: 0.45rem 2rem 0.45rem 2rem;
    border-radius: 1.65rem;
    border: 1px solid rgb(222, 226, 230);
    display: flex;
    justify-content: space-evenly;
  }
</style>
<nav class="navbar sticky-top navbar-expand-md bg-body-light border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings" style="margin-right: 0"
      ><i class="fa-regular fa-compass compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <h3>
          <a class="nav-link" href="/listings" style="color: #fe434d !important"
            >stayease</a
          >
        </h3>
      </div>
      <% if (route === "/listings" || route === "/map") { %>
      <div class="navbar-nav ms-auto search-bar">
        <form action="/listings/search" class="d-flex input-form" role="search" method="post" title="Please enter the most specific location possible to ensure accurate and relevant results within a range of 20-kms!">
          <input
            class="form-control me-2 input-search"
            type="search"
            name="search"
            placeholder="Search your Stay"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>
      <% } %>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Host on StayEase</a>
        <% if (!currentUser) { %>
        <a class="nav-link" href="/user/signup"><b>Signup</b></a>
        <a class="nav-link" href="/user/login"><b>Login</b></a>
        <% } else { %>
        <a class="nav-link" href="/user/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
