<% if (successMsg && successMsg.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show margin-top" role="alert">
  <%= successMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<% if (failureMsg && failureMsg.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show margin-top" role="alert">
  <%= failureMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
